{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}

<form action="/admin/categorias/editar" method="post">
    <input type="hidden" name="id" value="{{categoria._id}}" />
    <label for="nome">Nome</label>
    <input type="text" name="nome" id="nome" class="form-control" value="{{categoria.nome}}" />
    <label for="slug">Slug</label>
    <input type="text" name="slug" id="slug" class="form-control" value="{{categoria.slug}}" />
    <button type="submit" class="btn btn-success">Ok</button>
</form>