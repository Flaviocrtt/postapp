{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova postagem</h4>
        <form action="/admin/postagens/adicionar" method="post">
        <label for="titulo">Título</label>
        <input type="text" id="titulo" name="titulo" class="form-control"/>
        <label for="slug">Slug</label>
        <input type="text" id="slug" name="slug" class="form-control"/>
        <label for="descricao">Descrição</label>
        <input type="text" id="descricao" name="descricao" class="form-control"/>
        <label for="conteudo">Conteúdo</label>
        <textarea id="conteudo" name="conteudo" class="form-control"></textarea>
        <label for="categoria">Categoria</label>
        <select class="form-control" name="categoria">
            {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
            {{else}}
            <option id="0">Nenhuma categoria cadastrada</option>
            {{/each}}
        </select>
        <button class="btn btn-success mt-4" type="submit">Criar postagem</button>
        </form>
    </div>
</div>