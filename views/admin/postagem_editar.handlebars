{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/postagens/editar" method="post">
        <input type="hidden" name="id" value="{{postagem._id}}">
        <label for="titulo">Título</label>
        <input type="text" id="titulo" name="titulo" value="{{postagem.titulo}}" name="titulo" class="form-control"/>
        <label for="slug">Slug</label>
        <input type="text" id="slug" name="slug" value="{{postagem.slug}}" name="slug" class="form-control"/>
        <label for="descricao">Descrição</label>
        <input type="text" id="descricao" name="descricao" value="{{postagem.descricao}}" name="descricao" class="form-control"/>
        <label for="conteudo">Conteúdo</label>
        <textarea id="conteudo" name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
        <label for="categoria">Categoria</label>
        <select class="form-control" name="categoria">
            {{#each categorias}}
            <option value="{{_id}}" {{#if selecionado}}selected{{/if}}>{{nome}}</option>
            {{else}}
            <option id="0">Nenhuma categoria cadastrada</option>
            {{/each}}
        </select>
        <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
        </form>
    </div>
</div>